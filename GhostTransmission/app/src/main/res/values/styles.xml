<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="actionBarSize">55dp</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:textColorPrimary">@color/colorForeground</item>
    </style>

    <!-- Custom Action Bar background for the Primary Colour (Can be changed in the above style,
    however, the below style acts as a template for changing other values of the Action Bar -->
    <style name="AppTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/colorPrimary</item>
    </style>

</resources>
